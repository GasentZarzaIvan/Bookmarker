        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccentDay</item>
        <item name="android:colorAccent">@color/colorAccentDay</item>
